<odoo>
    <record id="view_studio_view_form" model="ir.ui.view">
        <field name="name">studio.view.form</field>
        <field name="model">studio.view</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="view_type"/>
                        <field name="xml_definition" widget="monospace"/>
                    </group>
                    <button name="open_view_builder" type="object" string="Open View Builder" class="btn-primary"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
