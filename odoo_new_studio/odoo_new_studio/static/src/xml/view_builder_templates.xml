<odoo>
    <templates>
        <t t-name="ViewBuilder">
            <div class="view-builder">
                <h3>View Builder</h3>

                <div class="toolbox">
                    <h4>Available Fields</h4>
                    <div class="draggable-field" draggable="true" data-field="name">Name</div>
                    <div class="draggable-field" draggable="true" data-field="email">Email</div>
                    <div class="draggable-field" draggable="true" data-field="phone">Phone</div>
                </div>

                <div class="drop-area">
                    <h4>Drop Fields Here</h4>
                </div>

                <button class="generate-xml">Generate XML</button>
                <pre class="xml-preview"></pre>
            </div>
        </t>
    </templates>
</odoo>
