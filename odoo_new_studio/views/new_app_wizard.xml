<odoo>
    <record id="view_new_app_wizard_form" model="ir.ui.view">
        <field name="name">studio.new.app.wizard.form</field>
        <field name="model">studio.new.app.wizard</field>
        <field name="arch" type="xml">
            <form string="Create a New App">
                <group>
                    <field name="name"/>
                    <field name="model_count"/>
                </group>
                <footer>
                    <button name="create_new_app" type="object" string="Create" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
